{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": "src",
    "testRegex": "\\.e2e-spec.ts$",
    "transform": {
        ".+\\.(t|j)s$": "ts-jest"
    },
    "reporters": [
        "default",
        [
            "jest-junit",
            {
                "outputDirectory": "./reports/junit/e2e"
            }
        ]
    ],
    "coverageReporters": [
        "clover",
        "cobertura",
        "json",
        "lcov",
        "text"
    ],
    "coverageDirectory": "../coverage-e2e",
    "testEnvironment": "node"
}
